            <StackLayout Orientation="Horizontal">
                <Image Source="biletix.png" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="120"/>
                <StackLayout HorizontalOptions="StartAndExpand" Padding="10,0">
                    <Label Text="Selfylilere özel indirim!!" TextColor="Black" FontSize="16"/>
